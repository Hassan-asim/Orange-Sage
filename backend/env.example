# App Configuration
APP_NAME=Orange Sage API
VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///./orange_sage.db

# Redis
REDIS_URL=redis://localhost:6379

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=AIzaSyC-your-gemini-api-key-here
DEFAULT_LLM_MODEL=gpt-4o-mini
FALLBACK_LLM_MODEL=gemini-1.5-flash

# Agent Configuration
MAX_AGENTS_PER_SCAN=10
AGENT_TIMEOUT_MINUTES=30
SANDBOX_TIMEOUT_MINUTES=60

# Docker/Sandbox
DOCKER_NETWORK=orange_sage_network
SANDBOX_IMAGE=orange_sage/sandbox:latest
SANDBOX_MEMORY_LIMIT=2g
SANDBOX_CPU_LIMIT=1.0

# Storage
UPLOAD_DIR=./uploads
REPORTS_DIR=./reports
MAX_FILE_SIZE=104857600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
